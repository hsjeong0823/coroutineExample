<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/channelTestButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Coroutine Channel Test" />

                <Button
                    android:id="@+id/channelProduceTestButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Coroutine Channel Test(produce)" />

                <Button
                    android:id="@+id/channelUnlimitedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Coroutine Channel.UNLIMITED" />

                <Button
                    android:id="@+id/channelCapacityButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Coroutine Channel capacity" />

                <Button
                    android:id="@+id/channelRendezvousdButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. Coroutine Channel.RENDEZVOUS" />

                <Button
                    android:id="@+id/channelConflateddButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6. Coroutine Channel.CONFLATED" />

                <Button
                    android:id="@+id/bufferOverFlowDropOldestButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7. BufferOverflow.DROP_OLDEST" />

                <Button
                    android:id="@+id/bufferOverFlowDropLatestButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8. BufferOverflow.DROP_LATEST" />

                <Button
                    android:id="@+id/bufferOverFlowSuspendButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9. BufferOverflow.SUSPEND" />

                <Button
                    android:id="@+id/channelOnUndeliveredElementButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10. channel onUndeliveredElement" />

                <Button
                    android:id="@+id/coroutineSelectButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11. Coroutine select" />

                <Button
                    android:id="@+id/coroutineSelectCallOnReceiveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12. Coroutine select(onReceive)" />

                <Button
                    android:id="@+id/coroutineSelectCallOnSendButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13. Coroutine select(onSend)" />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>