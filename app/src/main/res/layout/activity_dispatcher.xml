<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <Button
                android:id="@+id/singleThreadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Single Thread" />

            <Button
                android:id="@+id/multiThreadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multi Thread" />

            <Button
                android:id="@+id/multiThreadChildButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Multi Thread - Child" />

            <Button
                android:id="@+id/dispatchersIOButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispatchers.IO" />

            <Button
                android:id="@+id/dispatchersDefaultButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispatchers.Default" />

            <Button
                android:id="@+id/dispatchersDefaultLimitedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispatchers.Default - Limited" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>